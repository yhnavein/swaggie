{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./",
    "target": "ES2021",
    "module": "commonjs",
    "declaration": true,
    "removeComments": false,
    "esModuleInterop": true,
    "sourceMap": false,
    "newLine": "lf",
    "noEmit": true,
    "skipLibCheck": true,
    "types": ["bun-types"]
  },
  "exclude": ["node_modules", "dist", "coverage", "test/snapshots"]
}
